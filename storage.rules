rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Development rules: Allow authenticated users to read/write
    // Note: App uses custom auth (not Firebase Auth), so request.auth may be null
    // For development: Allow all authenticated users to upload images
    // TODO: Secure this in production - integrate Firebase Auth or use custom tokens
    match /menu-items/{allPaths=**} {
      allow read: if true; // Allow public read for menu item images
      allow write: if true; // Allow writes for development (TODO: restrict in production)
    }
    
    // Default: require authentication
    match /{allPaths=**} {
      allow read: if true;
      allow write: if true; // Development mode - TODO: restrict in production
    }
  }
}

